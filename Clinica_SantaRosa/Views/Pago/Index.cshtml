@using ClinicaSR.BL.BE
@model IEnumerable<ClinicaSR.BL.BE.ComprobantePagoBE>

@{
    Layout = "_LayoutCajero";
    ViewData["Title"] = "Historial de Comprobantes";
}

<style>
    /* Diseño Minimalista y Profesional */
    .page-container {
        margin-top: 1.5rem;
    }

    .card-modern {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

        .card-modern .card-header {
            background-color: #f8fafc;
            border-bottom: 1px solid #edf2f7;
            padding: 1.25rem 1.5rem;
            border-radius: 12px 12px 0 0;
        }

    .card-title {
        color: #1e293b;
        font-weight: 600;
        margin-bottom: 0;
    }

    /* Tabla Estilizada Financiera */
    .table-modern thead th {
        background-color: #f1f5f9;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.7rem;
        letter-spacing: 0.05em;
        border-bottom: 2px solid #e2e8f0;
        padding: 1rem;
    }

    .table-modern tbody td {
        padding: 1rem;
        color: #334155;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 0.9rem;
    }

    /* Badges de Estado para Pagos */
    .badge-pago {
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 6px;
        font-size: 0.75rem;
        display: inline-block;
    }

    .bg-emitido {
        background-color: #dcfce7;
        color: #166534;
    }

    .bg-anulado {
        background-color: #fee2e2;
        color: #991b1b;
    }

    .monto-text {
        font-family: 'Courier New', Courier, monospace;
        font-weight: 700;
        color: #0f172a;
    }

    .btn-action-group .btn {
        border-radius: 6px;
        padding: 0.35rem 0.6rem;
        transition: all 0.2s;
    }
</style>

<div class="page-container container-fluid px-4">
    <div class="card card-modern">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title">
                <i class="bi bi-wallet2 me-2 text-primary"></i>Gestión de Pagos
            </h5>
            <div class="header-actions">
                <a asp-action="Crear" class="btn btn-primary shadow-sm btn-sm px-3 fw-bold">
                    <i class="bi bi-plus-lg me-1"></i> Registrar Comprobante
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-modern mb-0">
                    <thead>
                        <tr>
                            <th>Nro. Doc</th>
                            <th>Cita Ref.</th>
                            <th>Pagador</th>
                            <th>Monto</th>
                            <th>Método</th>
                            <th>Estado</th>
                            <th>Fecha Emisión</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="fw-bold text-muted">#@item.ID_Comprobante.ToString("D5")</span></td>
                                    <td><span class="badge bg-light text-dark border">Cita #@item.CitaBE.ID_Cita</span></td>
                                    <td>
                                        <div class="fw-medium">@item.Nombre_Pagador @item.Apellidos_Pagador</div>
                                    </td>
                                    <td><span class="monto-text">S/. @item.Monto.ToString("N2")</span></td>
                                    <td>
                                        <small class="text-muted"><i class="bi bi-credit-card me-1"></i>@item.Metodo_Pago</small>
                                    </td>
                                    <td>
                                        @if (item.Estado == EstadoComprobante.EMITIDO)
                                        {
                                            <span class="badge-pago bg-emitido">EMITIDO</span>
                                        }
                                        else
                                        {
                                            <span class="badge-pago bg-anulado">ANULADO</span>
                                        }
                                    </td>
                                    <td>@item.Fecha_Emision.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        @if (item.Estado == EstadoComprobante.EMITIDO)
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm btn-anular"
                                                    data-id="@item.ID_Comprobante"
                                                    data-nro="@item.ID_Comprobante.ToString("D5")">
                                                <i class="bi bi-x-circle me-1"></i> Anular
                                            </button>

                                            <form id="form-anular-@item.ID_Comprobante" asp-action="Anular" method="post" class="d-none">
                                                <input type="hidden" name="id" value="@item.ID_Comprobante" />
                                                @Html.AntiForgeryToken()
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-light btn-sm text-muted disabled border-0">
                                                <i class="bi bi-slash-circle"></i> Sin acciones
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="bi bi-inbox fs-1 text-light d-block mb-3"></i>
                                    <span class="text-muted">No se han registrado pagos el día de hoy.</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center p-3">
            <a asp-controller="Home" asp-action="PanelCajero" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-house me-1"></i> Volver al Inicio
            </a>
            <span class="text-muted small">Total comprobantes: <strong>@Model.Count()</strong></span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const successMsg = '@TempData["Success"]';
        const errorMsg = '@TempData["Error"]';

        if (successMsg) Swal.fire({ icon: 'success', title: 'Operación Exitosa', text: successMsg, confirmButtonColor: '#10b981' });
        if (errorMsg) Swal.fire({ icon: 'error', title: 'Error', text: errorMsg });

        // Lógica de confirmación para anulación
        document.querySelectorAll('.btn-anular').forEach(btn => {
            btn.addEventListener('click', function () {
                const id = this.dataset.id;
                const nro = this.dataset.nro;

                Swal.fire({
                    title: '¿Anular comprobante?',
                    text: `Está por anular el documento #${nro}. Esta acción liberará la cita y cambiará el estado del pago.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: 'Sí, anular pago',
                    cancelButtonText: 'Mantener'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('form-anular-' + id).submit();
                    }
                });
            });
        });
    </script>
}