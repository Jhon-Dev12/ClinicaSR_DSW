@model ClinicaSR.PL.WebApp.ViewModels.ComprobantePagoViewModel

@{
    Layout = "_LayoutCajero";
    ViewData["Title"] = "Registrar Comprobante";
}

<style>
    /* Diseño Minimalista Unificado */
    .page-container {
        margin-top: 0.5rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .card-modern {
        border: none;
        border-radius: 24px;
        background: #ffffff;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header-modern {
        background-color: #f8fafc;
        border-bottom: 1px solid #edf2f7;
        padding: 1.5rem 2rem;
    }

    .card-title {
        color: #1e293b;
        font-weight: 600;
        margin-bottom: 0;
        font-size: 1.3rem;
    }

    .sub-header {
        font-size: 0.85rem;
        color: #64748b;
        margin-top: 4px;
    }

    /* Estilo de Formulario */
    .form-label {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #94a3b8;
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1.5px solid #e2e8f0;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        background-color: #fcfdfe;
        transition: all 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3b82f6;
            background-color: #ffffff;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.08);
            outline: none;
        }

    /* Iconos en inputs */
    .input-group-text {
        background-color: #ffffff;
        border: 1.5px solid #e2e8f0;
        border-right: none;
        border-radius: 12px 0 0 12px;
        color: #94a3b8;
    }

    .input-group .form-control, .input-group .form-select {
        border-left: none;
        border-radius: 0 12px 12px 0;
    }

    .section-divider {
        height: 1px;
        background: #f1f5f9;
        margin: 2rem 0;
        position: relative;
    }

    .section-label {
        position: absolute;
        top: -10px;
        left: 20px;
        background: white;
        padding: 0 10px;
        font-size: 0.7rem;
        font-weight: 700;
        color: #3b82f6;
        text-transform: uppercase;
    }
</style>

<div class="container page-container pb-5">
    <div class="card card-modern">

        <div class="card-header-modern">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3">
                    <i class="bi bi-receipt-cutoff text-primary fs-3"></i>
                </div>
                <div>
                    <h5 class="card-title">Emisión de Comprobante</h5>
                    <div class="sub-header">Complete los datos para confirmar el pago de la atención médica</div>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Crear" method="post" autocomplete="off">

                <div class="position-relative mb-4">
                    <div class="section-divider"><span class="section-label">Referencia Médica</span></div>
                    <div class="form-group">
                        <label asp-for="ID_Cita" class="form-label">Seleccionar Cita Pendiente</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar2-check"></i></span>
                            <select asp-for="ID_Cita" class="form-select"
                                    asp-items="@(new SelectList(Model.CitasPendientes, "ID_Cita", "TextoDisplay"))">
                                <option value="">-- Buscar por ID o Paciente --</option>
                            </select>
                        </div>
                        <span asp-validation-for="ID_Cita" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="section-divider"><span class="section-label">Datos de Facturación</span></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Nombre_Pagador" class="form-label">Nombres</label>
                        <input asp-for="Nombre_Pagador" class="form-control" placeholder="Nombre completo" />
                        <span asp-validation-for="Nombre_Pagador" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellidos_Pagador" class="form-label">Apellidos</label>
                        <input asp-for="Apellidos_Pagador" class="form-control" placeholder="Apellidos completos" />
                        <span asp-validation-for="Apellidos_Pagador" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DNI_Pagador" class="form-label">DNI / Documento</label>
                        <input asp-for="DNI_Pagador" class="form-control" placeholder="8 dígitos" maxlength="8" />
                        <span asp-validation-for="DNI_Pagador" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contacto_Pagador" class="form-label">Teléfono de Contacto</label>
                        <input asp-for="Contacto_Pagador" class="form-control" placeholder="Ej: 987 654 321" />
                        <span asp-validation-for="Contacto_Pagador" class="text-danger small"></span>
                    </div>
                </div>

                <div class="section-divider"><span class="section-label">Detalle del Cobro</span></div>

                <div class="row g-4 align-items-end">
                    <div class="col-md-6">
                        <label asp-for="Monto" class="form-label">Monto a Cobrar (S/.)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-cash-stack"></i></span>
                            <input asp-for="Monto" class="form-control" placeholder="0.00" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Monto" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Metodo_Pago" class="form-label">Método de Pago</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                            <select asp-for="Metodo_Pago" class="form-select"
                                    asp-items="Html.GetEnumSelectList<ClinicaSR.BL.BE.MetodoPago>()">
                                <option value="">-- Seleccione medio --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Metodo_Pago" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-12 mt-5 d-flex justify-content-between border-top pt-4">
                    <a asp-action="Index" class="btn btn-light border px-4 py-2">
                        <i class="bi bi-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-success px-5 py-2 shadow-sm fw-bold">
                        <i class="bi bi-check2-all me-2"></i>Emitir Comprobante
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Manejo de errores desde el servidor si existen
        const errorMsg = '@TempData["Error"]';
        if (errorMsg) {
            Swal.fire({
                icon: 'error',
                title: 'No se pudo emitir',
                text: errorMsg,
                confirmButtonColor: '#ef4444'
            });
        }
    </script>
}