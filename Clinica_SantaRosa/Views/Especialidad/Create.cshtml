@model ClinicaSR.PL.WebApp.Models.EspecialidadViewModel

@{
    ViewData["Title"] = "Registrar Especialidad";
    Layout = "_LayoutAdministrador";
}

<style>
    /* Diseño Minimalista Unificado */
    .page-container {
        margin-top: 2rem;
        max-width: 600px; /* Tamaño reducido para un campo único */
        margin-left: auto;
        margin-right: auto;
    }

    .card-modern {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header-modern {
        background-color: #f8f9fa;
        border-bottom: 1px solid #edf2f7;
        padding: 1.25rem 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .card-title {
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 0;
        font-size: 1.25rem;
    }

    .sub-header {
        font-size: 0.85rem;
        color: #718096;
    }

    .form-label {
        font-weight: 500;
        color: #4a5568;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 0.6rem 0.75rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #3182ce;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
        }

    .footer-info {
        background-color: #f8fafc;
        border-top: 1px solid #edf2f7;
        padding: 1rem;
        border-radius: 0 0 12px 12px;
        color: #a0aec0;
        font-size: 0.8rem;
    }
</style>

<div class="container page-container pb-5">
    <div class="card card-modern">

        <div class="card-header-modern">
            <h5 class="card-title">
                <i class="bi bi-shield-plus me-2 text-primary"></i>Nueva Especialidad
            </h5>
            <div class="sub-header">Defina una nueva área médica para la asignación de especialistas</div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label asp-for="Nombre" class="form-label">Nombre de la Especialidad</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0">
                            <i class="bi bi-tag"></i>
                        </span>
                        <input asp-for="Nombre" class="form-control border-start-0 ps-0"
                               placeholder="Ej: Neurología" required />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="col-12 mt-4 d-flex justify-content-between border-top pt-4">
                    <a asp-action="Index" class="btn btn-light border px-4">
                        <i class="bi bi-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-5 shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Guardar Especialidad
                    </button>
                </div>
            </form>
        </div>

        <div class="footer-info text-center">
            <i class="bi bi-info-circle me-1"></i> Evite duplicar nombres de especialidades ya existentes.
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Manejo de errores desde el servidor si existen
        const errorMsg = '@TempData["Error"]';
        if (errorMsg) {
            Swal.fire({
                icon: 'error',
                title: 'Atención',
                text: errorMsg,
                confirmButtonColor: '#3182ce'
            });
        }
    </script>
}