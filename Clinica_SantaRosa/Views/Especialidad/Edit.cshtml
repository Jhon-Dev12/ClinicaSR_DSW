@model ClinicaSR.PL.WebApp.Models.EspecialidadViewModel

@{
    ViewData["Title"] = "Editar Especialidad";
    Layout = "_LayoutAdministrador";
}

<style>
    /* Diseño Minimalista Unificado */
    .page-container {
        margin-top: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .card-modern {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header-modern {
        background-color: #f8f9fa;
        border-bottom: 1px solid #edf2f7;
        padding: 1.25rem 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .card-title {
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 0;
        font-size: 1.25rem;
    }

    .sub-header {
        font-size: 0.85rem;
        color: #718096;
    }

    .form-label {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #94a3b8;
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 0.6rem 0.75rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #38a169; /* Verde para edición exitosa */
            box-shadow: 0 0 0 3px rgba(56, 161, 105, 0.15);
        }

    .footer-info {
        background-color: #f0fff4; /* Verde muy tenue */
        border-top: 1px solid #c6f6d5;
        padding: 1rem;
        border-radius: 0 0 12px 12px;
        color: #38a169;
        font-size: 0.8rem;
    }
</style>

<div class="container page-container pb-5">
    <div class="card card-modern">

        <div class="card-header-modern">
            <div class="d-flex align-items-center">
                <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                    <i class="bi bi-pencil-square text-success fs-4"></i>
                </div>
                <div>
                    <h5 class="card-title">Modificar Especialidad</h5>
                    <div class="sub-header">Actualice el nombre de la especialidad #@Model.ID_Especialidad</div>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Edit" method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="ID_Especialidad" />

                <div class="mb-4">
                    <label asp-for="Nombre" class="form-label">Nombre de la Especialidad</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0">
                            <i class="bi bi-tag-fill"></i>
                        </span>
                        <input asp-for="Nombre" class="form-control border-start-0 ps-0"
                               placeholder="Ej: Pediatría" required />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="col-12 mt-4 d-flex justify-content-between border-top pt-4">
                    <a asp-action="Index" class="btn btn-light border px-4">
                        <i class="bi bi-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-5 shadow-sm">
                        <i class="bi bi-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>

        <div class="footer-info text-center">
            <i class="bi bi-info-circle me-1"></i> Los cambios se reflejarán inmediatamente en el listado de médicos.
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const errorMsg = '@TempData["Error"]';
        if (errorMsg) {
            Swal.fire({
                icon: 'error',
                title: 'Atención',
                text: errorMsg,
                confirmButtonColor: '#38a169'
            });
        }
    </script>
}