@model UsuarioViewModel
@{
    ViewData["Title"] = "Panel Cajero";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #ffffff;
            font-family: 'Poppins', sans-serif;
            color: #2c3e50;
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem 1rem;
            text-align: center;
        }

        .logo-container img {
            width: 200px;
            margin-bottom: 1.5rem;
        }

        .profile-section img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 3px solid #007bff;
            object-fit: cover;
            margin-bottom: 0.8rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .logout-btn {
            border-radius: 20px;
            padding: 0.45rem 1.1rem;
            background-color: #007bff;
            color: white;
            border: none;
            font-weight: 500;
        }

        .welcome h2 {
            color: #004a99;
            font-weight: 600;
        }

        .friendly-msg {
            color: #007bff;
            font-weight: 500;
        }

        /* Alineación Centrada para tarjetas únicas o pocas */
        .options {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 2rem;
            max-width: 1200px;
            width: 100%;
        }

        .card-option {
            background-color: white;
            border-radius: 12px;
            padding: 1.8rem;
            border: 1px solid #e5ecf6;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
            width: 320px; /* Ancho optimizado para legibilidad */
            transition: transform 0.2s;
        }

            .card-option:hover {
                transform: translateY(-5px);
            }

        footer {
            text-align: center;
            font-size: 0.85rem;
            color: #6c757d;
            padding: 1rem 0;
            border-top: 1px solid #e3e9f0;
            background-color: #f9fbff;
        }
    </style>
</head>

<body>

    <div class="main-container">

        <div class="logo-container">
            <img src="/images/ClinicaSantaRosaLogo.png" alt="Logo Clínica Santa Rosa" />
        </div>

        <div class="profile-section">
            @* Se aplica la lógica de imagen por defecto para evitar fotos rotas *@
            <img src="@(string.IsNullOrEmpty(Model.ImgPerfil) ? "/images/default-user.jpg" : Model.ImgPerfil)"
                 alt="Foto de perfil" />

            <form asp-controller="Seguridad" asp-action="Logout" method="post">
                <button type="submit" class="logout-btn">
                    <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                </button>
            </form>
        </div>

        <div class="welcome">
            <h2>¡Hola, @Model.Nombres!</h2>
            <p>Cargo: <span class="badge bg-primary">@Model.Rol</span></p>
            <p class="friendly-msg">¿Qué deseas hacer hoy?</p>
        </div>

        <div class="options">

            <div class="card-option">
                <i class="bi bi-receipt-cutoff fs-1 text-primary"></i> @* Icono de recibo de pago *@
                <h4 class="mt-3">Comprobantes de Pago</h4>
                <p>Registra, consulta y administra los comprobantes emitidos por servicios médicos.</p>
                <a asp-controller="Pago" asp-action="Index" class="btn btn-primary rounded-pill">
                    Ingresar
                </a>
            </div>

        </div>
    </div>

    <footer>
        © 2025 Clínica Santa Rosa — Sistema de Gestión Hospitalaria
    </footer>

</body>
</html>